<html ng-app="app.todos">

<head>
    <title>Node todos</title>

    <!-- Load cdn style-->
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">

    <!-- style app-->
    <link rel="stylesheet" href="assets/css/style.css">

    <!-- Load cdn scripts-->
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.8/angular.js"></script>

    <!-- Load app-->
    <script src="assets/js/main/app.js"></script>

</head>

<body ng-controller="todoController">

    <div class="container">
        <div class="jumbotron text-center">
            <h1>{{ appName }}
                <span class="label label-info">10</span>
            </h1>
        </div>

        <div id="todo-list" class="row">
            <div class="col-sm-6 col-sm-offset-3">
                <div class="checkbox" ng-repeat="todo in todos">
                    <input type="checkbox" ng-model="todo.isDone">
                    <span ng-class="{strike: todo.isDone}">{{todo.text}}</span> 
                </div>
            </div>
        </div>

        <div id="todo-form" class="row">
            <div class="col-sm-8 col-sm-offset-2 text-center">
                <form>
                    <div class="form-group">
                        <input type="text" ng-model="formData.text" class="form-control input-lg text-center" placeholder="What do you want to do ?">
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg" ng-click="creatTodo()">Add</button>
                </form>
            </div>
        </div>

    </div>


</body>

</html>